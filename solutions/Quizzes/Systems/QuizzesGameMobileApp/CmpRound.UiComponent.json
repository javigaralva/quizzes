{
  "eventsAndFunctions": [
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "gameId",
            "variableName": "gameId"
          },
          {
            "command": "Set",
            "expression": "QuizzesMicroservice.StartRound( gameId )",
            "variableName": "gameState"
          },
          {
            "children": [
              {
                "command": "Navigate",
                "expressionStartModel": "{ gameState: gameState }",
                "uiComponentName": "CmpStartGame"
              }
            ],
            "command": "If",
            "expression": "gameState.currentRound > gameState.totalRounds"
          },
          {
            "children": [
              {
                "command": "SetValue",
                "expression": "{ question: gameState.currentQuiz.question }",
                "widgetName": "htmlrendererQuestion"
              },
              {
                "command": "Load",
                "expression": "[ \n[ 1, gameState.currentQuiz.answer1 ], \n[ 2, gameState.currentQuiz.answer2 ], \n[ 3, gameState.currentQuiz.answer3 ], \n[ 4, gameState.currentQuiz.answer4 ]\n]",
                "widgetName": "optiongroupAnswers"
              }
            ],
            "command": "Else"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "gameState",
            "type": "QuizzesMicroservice.GameState"
          },
          {
            "name": "gameId",
            "type": "integer"
          }
        ]
      },
      "name": "main_init"
    }
  ],
  "model": [
    {
      "name": "gameId",
      "required": true,
      "type": "integer"
    }
  ],
  "root": {
    "alignItems": "center",
    "children": [
      {
        "alignItems": "center",
        "children": [
          {
            "cssClass": "blz-padding-right-large blz-padding-left-large",
            "htmlTemplate": "<h2>\n  {{question}}\n</h2>",
            "name": "htmlrendererQuestion",
            "widget": "HtmlRenderer"
          },
          {
            "children": [
              {
                "cssClass": "blz-padding-top-large blz-padding-left-large blz-padding-bottom-small blz-border-top blz-border-right blz-border-left blz-border-bottom blz-border-radius blz-cast-shadow",
                "dataFormat": "key-value",
                "display": "normal",
                "mode": "single",
                "name": "optiongroupAnswers",
                "size": "12/12",
                "widget": "OptionGroup"
              }
            ],
            "cssClass": "blz-padding-bottom-large",
            "layout": "container",
            "size": "7/12"
          }
        ],
        "layout": "container"
      },
      {
        "align": "center",
        "color": "primary",
        "cssClass": "blz-padding-top-large",
        "name": "buttonSendAnswer",
        "size": "large",
        "text": "NEXT",
        "widget": "Button"
      }
    ],
    "cssClass": "blz-padding-top-large blz-area-default",
    "layout": "container"
  },
  "routing": {
    "path": "/round-game"
  },
  "unused": [
    {
      "__internalName": "fieldQuestion",
      "align": "center",
      "color": "default",
      "name": "fieldQuestion",
      "size": "medium",
      "verticalAlign": "center",
      "widget": "Field"
    }
  ]
}