{
  "eventsAndFunctions": [
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "Hide",
            "widgetName": "iconCorrect"
          },
          {
            "command": "Hide",
            "widgetName": "iconIncorrect"
          },
          {
            "command": "ReadModel",
            "modelVariableName": "gameId",
            "variableName": "gameId"
          },
          {
            "command": "Set",
            "expression": "QuizzesMicroservice.StartRound( gameId )",
            "variableName": "gameState"
          },
          {
            "command": "Set",
            "expression": "[ \n  [ 1, gameState.currentQuiz.answer1 ], \n  [ 2, gameState.currentQuiz.answer2 ], \n  [ 3, gameState.currentQuiz.answer3 ], \n  [ 4, gameState.currentQuiz.answer4 ]\n]",
            "variableName": "answers"
          },
          {
            "command": "WriteModel",
            "expression": "answers",
            "modelVariableName": "answers"
          },
          {
            "command": "SetValue",
            "expression": "{ \n\tcurrentRound: gameState.currentRound,\n    totalRounds: gameState.totalRounds,\n\tquestion: gameState.currentQuiz.question\n}",
            "widgetName": "htmlrendererQuestion"
          },
          {
            "command": "Load",
            "expression": "answers",
            "widgetName": "optiongroupAnswers"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "gameState",
            "type": "QuizzesMicroservice.GameState"
          },
          {
            "name": "gameId",
            "type": "integer"
          },
          {
            "name": "answers",
            "type": "list( tuple( integer, string ) )"
          }
        ]
      },
      "name": "main_init"
    },
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "gameId",
            "variableName": "gameId"
          },
          {
            "command": "GetValue",
            "variableName": "userAnswer",
            "widgetName": "optiongroupAnswers"
          },
          {
            "children": [
              {
                "command": "AlertMessage",
                "expressionMessage": "\"Please select and anwser\"",
                "expressionTitle": "\"Please select and anwser\"",
                "severity": "error"
              },
              {
                "command": "Return",
                "expression": "null"
              }
            ],
            "command": "If",
            "expression": "IsNull( userAnswer )"
          },
          {
            "command": "Set",
            "expression": "QuizzesMicroservice.EndRound( { gameId: gameId, userAnswer: userAnswer } )",
            "variableName": "response"
          },
          {
            "command": "Hide",
            "widgetName": "quizContainer"
          },
          {
            "children": [
              {
                "command": "Show",
                "widgetName": "iconCorrect"
              },
              {
                "command": "Sleep",
                "expressionMilliseconds": "1000"
              }
            ],
            "command": "If",
            "expression": "response.correctAnwser == userAnswer"
          },
          {
            "children": [
              {
                "command": "ReadModel",
                "modelVariableName": "answers",
                "variableName": "answers"
              },
              {
                "command": "Set",
                "expression": "FindFirst( answers, First( This() ) == ^response.correctAnwser )[ 1 ]",
                "variableName": "correctAnswer"
              },
              {
                "command": "SetValue",
                "expression": "{ correctAnswer: correctAnswer }",
                "widgetName": "htmlrendererCorrectAnswer"
              },
              {
                "command": "Show",
                "widgetName": "iconIncorrect"
              },
              {
                "command": "Sleep",
                "expressionMilliseconds": "2000"
              }
            ],
            "command": "Else"
          },
          {
            "children": [
              {
                "command": "Navigate",
                "expressionStartModel": "{ gameId: gameId }",
                "uiComponentName": "CmpEndGame"
              }
            ],
            "command": "If",
            "expression": "response.isGameEnded"
          },
          {
            "children": [
              {
                "command": "Navigate",
                "expressionStartModel": "{ gameId: gameId }",
                "uiComponentName": "CmpRound"
              }
            ],
            "command": "Else"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "gameId",
            "type": "integer"
          },
          {
            "name": "userAnswer",
            "type": "integer"
          },
          {
            "name": "response",
            "type": "QuizzesMicroservice.EndRoundResponse"
          },
          {
            "name": "correctAnswer",
            "type": "string"
          },
          {
            "name": "answers",
            "type": "list( tuple( integer, string ) )"
          }
        ]
      },
      "name": "buttonSendAnswer_click"
    }
  ],
  "model": [
    {
      "name": "gameId",
      "required": true,
      "type": "integer"
    },
    {
      "name": "answers",
      "required": false,
      "type": "list( tuple( integer, string ) )"
    }
  ],
  "root": {
    "alignItems": "center",
    "children": [
      {
        "children": [
          {
            "alignItems": "center",
            "children": [
              {
                "cssClass": "blz-padding-right-large blz-padding-left-large",
                "htmlTemplate": "<center>\n  <h4> Question {{currentRound}} / {{totalRounds}} </h4>\n  <h3> {{question}} </h3>\n</center>",
                "name": "htmlrendererQuestion",
                "widget": "HtmlRenderer"
              },
              {
                "children": [
                  {
                    "cssClass": "blz-padding-top-large blz-padding-left-large blz-padding-bottom-small blz-border-top blz-border-right blz-border-left blz-border-bottom blz-border-radius blz-cast-shadow",
                    "dataFormat": "key-value",
                    "display": "normal",
                    "mandatory": true,
                    "mode": "single",
                    "name": "optiongroupAnswers",
                    "size": "12/12",
                    "widget": "OptionGroup"
                  }
                ],
                "cssClass": "blz-padding-bottom-large",
                "layout": "container"
              }
            ],
            "layout": "container"
          },
          {
            "align": "center",
            "color": "primary",
            "cssClass": "blz-padding-top-large",
            "name": "buttonSendAnswer",
            "size": "large",
            "text": "PLAY",
            "widget": "Button"
          }
        ],
        "layout": "container",
        "name": "quizContainer"
      },
      {
        "alignItems": "center",
        "children": [
          {
            "align": "left",
            "color": "error",
            "icon": "remove.svg",
            "name": "iconIncorrect",
            "size": "xx-large",
            "widget": "Icon"
          },
          {
            "cssClass": "blz-padding-right-large blz-padding-left-large",
            "htmlTemplate": "<center>\n\t<h4>The correct answer was:</h2>\n\t<h3>{{correctAnswer}}</h3>\n</center>",
            "name": "htmlrendererCorrectAnswer",
            "widget": "HtmlRenderer"
          },
          {
            "align": "left",
            "color": "success",
            "icon": "correct.svg",
            "name": "iconCorrect",
            "size": "xx-large",
            "widget": "Icon"
          }
        ],
        "cssClass": "blz-area-default",
        "layout": "container",
        "name": "responseQuizContainer"
      }
    ],
    "cssClass": "blz-padding-top-large blz-area-default",
    "layout": "container"
  },
  "routing": {
    "path": "/round-game"
  },
  "unused": []
}