{
  "eventsAndFunctions": [
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "gameId",
            "variableName": "gameId"
          },
          {
            "command": "Set",
            "expression": "QuizzesMicroservice.StartRound( gameId )",
            "variableName": "gameState"
          },
          {
            "command": "SetValue",
            "expression": "{ \n\tcurrentRound: gameState.currentRound,\n    totalRounds: gameState.totalRounds,\n\tquestion: gameState.currentQuiz.question\n}",
            "widgetName": "htmlrendererQuestion"
          },
          {
            "command": "Load",
            "expression": "[ \n[ 1, gameState.currentQuiz.answer1 ], \n[ 2, gameState.currentQuiz.answer2 ], \n[ 3, gameState.currentQuiz.answer3 ], \n[ 4, gameState.currentQuiz.answer4 ]\n]",
            "widgetName": "optiongroupAnswers"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "gameState",
            "type": "QuizzesMicroservice.GameState"
          },
          {
            "name": "gameId",
            "type": "integer"
          }
        ]
      },
      "name": "main_init"
    },
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "gameId",
            "variableName": "gameId"
          },
          {
            "command": "GetValue",
            "variableName": "userAnswer",
            "widgetName": "optiongroupAnswers"
          },
          {
            "children": [
              {
                "command": "AlertMessage",
                "expressionMessage": "\"Please select and anwser\"",
                "expressionTitle": "\"Please select and anwser\"",
                "severity": "error"
              },
              {
                "command": "Return",
                "expression": "null"
              }
            ],
            "command": "If",
            "expression": "IsNull( userAnswer )"
          },
          {
            "command": "Set",
            "expression": "QuizzesMicroservice.EndRound( { gameId: gameId, userAnswer: userAnswer } )",
            "variableName": "response"
          },
          {
            "children": [
              {
                "command": "AlertMessage",
                "expressionMessage": "\"CORRECT!\"",
                "expressionTitle": "\"CORRECT!\"",
                "severity": "information"
              }
            ],
            "command": "If",
            "expression": "response.correctAnwser == userAnswer"
          },
          {
            "children": [
              {
                "command": "AlertMessage",
                "expressionMessage": "\"INCORRECT! The the correct anwser was: ...\"",
                "expressionTitle": "\"INCORRECT!\"",
                "severity": "error"
              }
            ],
            "command": "Else"
          },
          {
            "children": [
              {
                "command": "Navigate",
                "expressionStartModel": "{ gameId: gameId }",
                "uiComponentName": "CmpEndGame"
              }
            ],
            "command": "If",
            "expression": "response.isGameEnded"
          },
          {
            "children": [
              {
                "command": "Navigate",
                "expressionStartModel": "{ gameId: gameId }",
                "uiComponentName": "CmpRound"
              }
            ],
            "command": "Else"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "gameId",
            "type": "integer"
          },
          {
            "name": "userAnswer",
            "type": "integer"
          },
          {
            "name": "response",
            "type": "QuizzesMicroservice.EndRoundResponse"
          }
        ]
      },
      "name": "buttonSendAnswer_click"
    }
  ],
  "model": [
    {
      "name": "gameId",
      "required": true,
      "type": "integer"
    }
  ],
  "root": {
    "alignItems": "center",
    "children": [
      {
        "alignItems": "center",
        "children": [
          {
            "cssClass": "blz-padding-right-large blz-padding-left-large",
            "htmlTemplate": "<center>\n  <h3> Question {{currentRound}} / {{totalRounds}} </h3>\n  <h2> {{question}} </h2>\n</center>",
            "name": "htmlrendererQuestion",
            "widget": "HtmlRenderer"
          },
          {
            "children": [
              {
                "cssClass": "blz-padding-top-large blz-padding-left-large blz-padding-bottom-small blz-border-top blz-border-right blz-border-left blz-border-bottom blz-border-radius blz-cast-shadow",
                "dataFormat": "key-value",
                "display": "normal",
                "mandatory": true,
                "mode": "single",
                "name": "optiongroupAnswers",
                "size": "12/12",
                "widget": "OptionGroup"
              }
            ],
            "cssClass": "blz-padding-bottom-large",
            "layout": "container",
            "size": "7/12"
          }
        ],
        "layout": "container"
      },
      {
        "align": "center",
        "color": "primary",
        "cssClass": "blz-padding-top-large",
        "name": "buttonSendAnswer",
        "size": "large",
        "text": "NEXT",
        "widget": "Button"
      }
    ],
    "cssClass": "blz-padding-top-large blz-area-default",
    "layout": "container"
  },
  "routing": {
    "path": "/round-game"
  },
  "unused": [
    {
      "__internalName": "fieldQuestion",
      "align": "center",
      "color": "default",
      "name": "fieldQuestion",
      "size": "medium",
      "verticalAlign": "center",
      "widget": "Field"
    }
  ]
}