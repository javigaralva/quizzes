{
  "eventsAndFunctions": [
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "gameId",
            "variableName": "gameId"
          },
          {
            "command": "Set",
            "expression": "QuizzesMicroservice.StartRound( gameId )",
            "variableName": "gameState"
          },
          {
            "command": "Set",
            "expression": "[ \n  [ 1, gameState.currentQuiz.answer1 ], \n  [ 2, gameState.currentQuiz.answer2 ], \n  [ 3, gameState.currentQuiz.answer3 ], \n  [ 4, gameState.currentQuiz.answer4 ]\n]",
            "variableName": "answers"
          },
          {
            "command": "WriteModel",
            "expression": "answers",
            "modelVariableName": "answers"
          },
          {
            "command": "SetValue",
            "expression": "{ \n\tcurrentRound: gameState.currentRound,\n    totalRounds: gameState.totalRounds,\n\tquestion: gameState.currentQuiz.question\n}",
            "widgetName": "htmlrendererQuestion"
          },
          {
            "command": "Load",
            "expression": "answers",
            "widgetName": "optiongroupAnswers"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "gameState",
            "type": "QuizzesMicroservice.GameState"
          },
          {
            "name": "gameId",
            "type": "integer"
          },
          {
            "name": "answers",
            "type": "list( tuple( integer, string ) )"
          }
        ]
      },
      "name": "main_init"
    },
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "gameId",
            "variableName": "gameId"
          },
          {
            "command": "GetValue",
            "variableName": "userAnswer",
            "widgetName": "optiongroupAnswers"
          },
          {
            "children": [
              {
                "command": "AlertMessage",
                "expressionMessage": "\"Please select an anwser\"",
                "expressionTitle": "\"Please select and anwser\"",
                "severity": "error"
              },
              {
                "command": "Return",
                "expression": "null"
              }
            ],
            "command": "If",
            "expression": "IsNull( userAnswer )"
          },
          {
            "command": "Set",
            "expression": "QuizzesMicroservice.EndRound( { gameId: gameId, userAnswer: userAnswer } )",
            "variableName": "response"
          },
          {
            "command": "Execute",
            "expression": "showRoundResult( userAnswer, response )"
          },
          {
            "children": [
              {
                "command": "Navigate",
                "expressionStartModel": "{ gameId: gameId }",
                "uiComponentName": "CmpEndGame"
              }
            ],
            "command": "If",
            "expression": "response.isGameEnded"
          },
          {
            "children": [
              {
                "command": "Navigate",
                "expressionStartModel": "{ gameId: gameId }",
                "uiComponentName": "CmpRound"
              }
            ],
            "command": "Else"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "gameId",
            "type": "integer"
          },
          {
            "name": "userAnswer",
            "type": "integer"
          },
          {
            "name": "response",
            "type": "QuizzesMicroservice.EndRoundResponse"
          },
          {
            "name": "correctAnswer",
            "type": "string"
          },
          {
            "name": "answers",
            "type": "list( tuple( integer, string ) )"
          },
          {
            "name": "wasCorrect",
            "type": "boolean"
          }
        ]
      },
      "name": "buttonSendAnswer_click"
    },
    {
      "algorithm": {
        "parameters": [
          {
            "name": "userAnswer",
            "type": "integer"
          },
          {
            "name": "response",
            "type": "QuizzesMicroservice.EndRoundResponse"
          }
        ],
        "statements": [
          {
            "command": "Set",
            "expression": "response.correctAnwser == userAnswer",
            "variableName": "wasCorrect"
          },
          {
            "command": "ReadModel",
            "modelVariableName": "answers",
            "variableName": "answers"
          },
          {
            "command": "Set",
            "expression": "FindFirst( answers, First( This() ) == ^response.correctAnwser )[ 1 ]",
            "variableName": "correctAnswer"
          },
          {
            "command": "Navigate",
            "expressionStartModel": "{ wasCorrect: wasCorrect, correctAnswer: correctAnswer }",
            "uiComponentName": "CmpRoundResult"
          },
          {
            "children": [
              {
                "command": "Sleep",
                "expressionMilliseconds": "1000"
              }
            ],
            "command": "If",
            "expression": "wasCorrect"
          },
          {
            "children": [
              {
                "command": "Sleep",
                "expressionMilliseconds": "2000"
              }
            ],
            "command": "Else"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "correctAnswer",
            "type": "string"
          },
          {
            "name": "answers",
            "type": "list( tuple( integer, string ) )"
          },
          {
            "name": "wasCorrect",
            "type": "boolean"
          }
        ]
      },
      "name": "showRoundResult"
    }
  ],
  "model": [
    {
      "name": "gameId",
      "required": true,
      "type": "integer"
    },
    {
      "name": "answers",
      "required": false,
      "type": "list( tuple( integer, string ) )"
    }
  ],
  "root": {
    "alignItems": "center",
    "children": [
      {
        "children": [
          {
            "alignItems": "center",
            "children": [
              {
                "cssClass": "blz-padding-right-large blz-padding-left-large blz-area-default",
                "htmlTemplate": "<center>\n  <h4> Question {{currentRound}} / {{totalRounds}} </h4>\n  <h3> {{question}} </h3>\n</center>",
                "name": "htmlrendererQuestion",
                "widget": "HtmlRenderer"
              },
              {
                "alignItems": "center",
                "children": [
                  {
                    "cssClass": "blz-padding-top-large blz-padding-left-large blz-padding-bottom-small blz-cast-shadow blz-area-default",
                    "dataFormat": "key-value",
                    "display": "normal",
                    "mandatory": true,
                    "mode": "single",
                    "name": "optiongroupAnswers",
                    "widget": "OptionGroup"
                  }
                ],
                "cssClass": "blz-padding-top-large blz-padding-bottom-large blz-border-top",
                "layout": "container"
              }
            ],
            "cssClass": "blz-border-top blz-border-right blz-border-left blz-border-bottom blz-border-radius",
            "layout": "container",
            "verticalSeparation": "large"
          },
          {
            "align": "center",
            "color": "primary",
            "cssClass": "blz-padding-top-large",
            "name": "buttonSendAnswer",
            "size": "large",
            "text": "NEXT",
            "widget": "Button"
          }
        ],
        "layout": "container",
        "name": "quizContainer"
      }
    ],
    "cssClass": "blz-padding-top-large blz-area-default",
    "layout": "container"
  },
  "routing": {
    "path": "/round-game"
  },
  "unused": [
    {
      "__internalName": "htmlrendererCorrect",
      "htmlTemplate": "<svg class=\"checkmark\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 52 52\">\n  <circle class=\"checkmark__circle\" cx=\"26\" cy=\"26\" r=\"25\" fill=\"none\"/>\n  <path class=\"checkmark__check\" fill=\"none\" d=\"M14.1 27.2l7.1 7.2 16.7-16.8\"/>\n</svg>",
      "name": "htmlrendererCorrect",
      "widget": "HtmlRenderer"
    },
    {
      "__internalName": "iconIncorrect",
      "align": "left",
      "color": "error",
      "icon": "remove.svg",
      "name": "iconIncorrect",
      "size": "xx-large",
      "widget": "Icon"
    },
    {
      "__internalName": "htmlrendererCorrectAnswer",
      "cssClass": "blz-padding-right-large blz-padding-left-large",
      "htmlTemplate": "<center>\n\t<h4>The correct answer was:</h2>\n\t<h3>{{correctAnswer}}</h3>\n</center>",
      "name": "htmlrendererCorrectAnswer",
      "widget": "HtmlRenderer"
    },
    {
      "__internalName": "iconCorrect",
      "align": "left",
      "color": "success",
      "icon": "correct.svg",
      "name": "iconCorrect",
      "size": "xx-large",
      "widget": "Icon"
    }
  ]
}