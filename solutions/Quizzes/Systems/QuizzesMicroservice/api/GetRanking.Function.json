          },
          {
            "children": [
              {
                "command": "Push",
                "expressionItem": "bestGame",
                "variableNameList": "ranking"
              }
            ],
            "command": "If",
            "expression": "IsNotNull( bestGame )"
          }
        ],
        "command": "ForEach",
        "expressionList": "topics",
        "variableNameItem": "topic"
      },
      {
        "command": "Return",
        "expression": "ranking"
